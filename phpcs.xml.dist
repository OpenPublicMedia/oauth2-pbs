<?xml version="1.0"?>
<ruleset name="PHP_CodeSniffer">
    <rule ref="PSR2"/>
    <rule ref="./vendor/phpcompatibility/php-compatibility/PHPCompatibility"/>

    <arg name="basepath" value="."/>
    <arg name="colors"/>
    <arg name="parallel" value="75"/>
    <arg value="p"/>

    <file>src/</file>
    <file>test/</file>

    <config name="testVersion" value="8.0-"/>
</ruleset>
